<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Fliplearn Automation Suite">

<listeners>
	<listener class-name="com.fliplearn.flipapp.helper.Base"/>
</listeners>
 
 <test name="Onboarding" enabled="true">
  		<classes>
    		<class name="com.fliplearn.flipapp.testcases.Login">
        		<methods>
        			<include name="verifyLogin"/>
        		</methods>
        	</class>
        	<class name="com.fliplearn.flipapp.testcases.UserProfile">
        		<methods>
        			<include name="verifyUserRole" />  	
        		</methods>
        	</class>
      	</classes> 
	</test> 
	
	<test name="Learning" enabled="true">
  		<classes>
    		<class name="com.fliplearn.flipapp.testcases.PrimeContent">
        		<methods>
        		    <include name="verifyPrimeTileDisplayed" />
        			<include name="verifyPrimeClasses"/>
        			<include name="verifyPrimeSubjects"/>
        		</methods>
        	</class>
        		<class name="com.fliplearn.flipapp.testcases.VMC">
        		<methods>
        			<include name="displayVMCStudent" />  
        			<include name="doNotDisplayVMCStudent" />	
        			<include name="displayVMCSchool" />
        		</methods>
        	</class>
        	<class name="com.fliplearn.flipapp.testcases.QuizDashboard">
        		<methods>
        		    <include name="verifyQuizDashboardTileDisplayed" />  	
        			<include name="verifyQuizDashboardClasses" />  	
        		</methods>
        	</class>
        	
    		<class name="com.fliplearn.flipapp.testcases.PrimeResources">
        		<methods>
        			<include name="playPrimeVideoSchool" /> 
        			<include name="playPrimeVideoStudent" />  
        			<include name="verifyTopicSynopsisSchool" /> 
        			<include name="verifyTopicSynopsisStudent" /> 
        			<include name="verifyMindMapsSchool" /> 
        			<include name="verifyMindMapsStudent" /> 
        			<include name="verifyRealLifeSchool" />  
        			<include name="verifyRealLifeStudent" /> 
       
        		</methods>
        	</class>
      	</classes> 
	</test> 
	
	<test name="Communication" enabled="true">
  		<classes>
    		<class name="com.fliplearn.flipapp.testcases.Event">
        		<methods>
        			<include name="createAnnouncement" />  
        			<include name="createAlbum" />	
        			<include name="createHomework" />
        			<include name="canNotCreateAnnouncement" />	
        			<include name="canNotCreateAlbum" />
        			<include name="canNotCreateHomework" />	
        			<include name="studentCanViewAnnouncement" />
        			<include name="studentCanViewAlbum" />	
        			<include name="studentCanViewHomework" />
        			<include name="parentCanViewAnnouncement" />	
        			<include name="parentCanViewAlbum" />
        			<include name="parentCanViewHomework" />
        		</methods>
        	</class>
         	</classes> 
	</test>  
	
	<test name="Marketplace" enabled="true">
  		<classes>
    		<class name="com.fliplearn.flipapp.testcases.Fee">
        		<methods>
        			<include name="payFeeLoginDebitCard"/>
        			<include name="payFeeLogoutDebitCard"/>
        			<include name="payFeeLoginNetBanking"/>
        			<include name="payFeeLogoutNetBanking"/>
        			<include name="payFeeLoginUPI"/>
        			<include name="payFeeLogoutUPI"/>
        			<include name="payFeeLoginVISA"/>
        			<include name="payFeeLogoutVISA"/>
        			<include name="payFeeLoginAmex"/>
        			<include name="payFeeLogoutAmex"/>
        		</methods>
        	</class>
	</classes>
	</test>
</suite>	