<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Fliplearn Automation Suite">

<listeners>
	<listener class-name="com.fliplearn.flipapp.helper.Base"/>
</listeners>
 
 <test name="Onboarding" enabled="true">
  		<classes>
    		<class name="com.fliplearn.flipapp.testcases.Login">
        		<methods>
        			<include name="verifyLogin"/>
        		</methods>
        	</class>
        	<class name="com.fliplearn.flipapp.testcases.UserProfile">
        		<methods>
        			<include name="verifyUserRole" />  	
        		</methods>
        	</class>
      	</classes> 
	</test> 
	
	<test name="Learning" enabled="true">
  		<classes>
    		<class name="com.fliplearn.flipapp.testcases.FliplearnPrimeView">
        		<methods>
        		    <include name="verifyPrimeTileDisplayed" />
        			<include name="verifyPrimeClasses"/>
        			<include name="verifyPrimeSubjects"/>
        		</methods>
        	</class>
        		<class name="com.fliplearn.flipapp.testcases.VMC">
        		<methods>
        			<include name="displayVMCStudent" />  
        			<include name="doNotDisplayVMCStudent" />	
        			<include name="displayVMCSchool" />
        		</methods>
        	</class>
        	<class name="com.fliplearn.flipapp.testcases.QuizDashboard">
        		<methods>
        		    <include name="verifyQuizDashboardTileDisplayed" />  	
        			<include name="verifyQuizDashboardClasses" />  	
        		</methods>
        	</class>
      	</classes> 
	</test> 
	
	<test name="Communication" enabled="true">
  		<classes>
    		<class name="com.fliplearn.flipapp.testcases.Announcement">
        		<methods>
        			<include name="createAnnouncement" />  
        			<include name="canNotCreateAnnouncement" />	
        			<include name="canViewAnnouncement" />
        		</methods>
        	</class>
        	<class name="com.fliplearn.flipapp.testcases.Album">
        		<methods>
        			<include name="createAlbum" />  
        			<include name="canNotcreateAlbum" />	
        			<include name="canViewAlbum" />
        		</methods>
        	</class>
        	<class name="com.fliplearn.flipapp.testcases.Homework">
        		<methods>
        			<include name="createHomework" />  
        			<include name="canNotcreateHomework" />	
        			<include name="canViewHomework" />
        		</methods>
        	</class>
      	</classes> 
	</test>  
	
	<test name="Marketplace" enabled="true">
  		<classes>
    		<class name="com.fliplearn.flipapp.testcases.Fee">
        		<methods>
        			<include name="payFeeWithoutLoginSelectedByDebitCard" />
					<include name="payFeeLoginStudentParentSelectedByNetBnking" />
					<include name="payFeeWithoutLoginSelectedByNetBnking" />
					<include name="payFeeLoginStudentParentSelectedByUpi" />
					<include name="payFeeWithoutLoginSelectedByUpi" />
					<include name="payFeeLoginWithStudentParentSelectedByVisa" />
					<include name="payFeeWithoutLoginSelectedByVisa" />
					<include name="payFeeLoginWithSelectedByVisa" />
					<include name="payFeeWithoutLoginSelectedByAmex" />
					<include name="payLoginWithStudentSelectedByAmex" />
					<include name="payFeeLoginWithGuestSelectedByAmex" />
					<include name="payFeeLoginWithGuestSelectedByVisa" />
					<include name="payFeeLoginWithGuestSelectedByUpi" />
					<include name="payFeeLoginWithGuestSelectedByNetBnking" />
					<include name="payFeeLoginWithGuestSelectedByDebitCard" />
        		</methods>
        	</class>
	</classes>
	</test>
</suite>	